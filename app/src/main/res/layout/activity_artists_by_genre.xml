<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/MainActivityBackground"
    tools:context=".activityPages.ArtistsByGenrePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/allSongsByGenreTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:paddingStart="10sp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="0.5dp"
        android:background="@color/MainActivityBackground"
        android:onClick="allSongsByGenreDisplay"
        android:gravity="center_vertical|left"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/all_songs"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <TextView
        android:id="@+id/allAlbumsByGenreTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:paddingStart="10sp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="0.5dp"
        android:background="@color/MainActivityBackground"
        android:onClick="allAlbumsByGenreDisplay"
        android:gravity="center_vertical|left"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/all_albums"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

    <ListView
        android:id="@+id/artists_page_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>